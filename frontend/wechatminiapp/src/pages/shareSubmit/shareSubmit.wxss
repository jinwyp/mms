.con{
    height: 100vh;
    background: #ffffff;
}
.submit{
    width: 100%;
    height: 494rpx;
    border-bottom: 1px solid #dedede;
    text-align: center;
    padding: 50rpx 0;
    box-sizing: border-box;
    background: #f5f5f5;
}
.tip{
    color: #01696c;
    font-size: 14px;
    line-height: 80rpx;
}
.toCollection{
    font-size: 14px;
    background: #01696c;
    color: #ffffff;
    display: inline-block;
    width: 292rpx;
    line-height: 60rpx;
    border-radius: 5rpx;
    margin-top:30rpx;
}
.shareTip{
    position: absolute;
    top:10rpx;
    right: 0;
    width: 230rpx;
    height: 140rpx;
}
.imgs{
    text-align: center;
    padding-top: 50rpx;
}
.imgs icon{
    margin-top: 30rpx;
}
.imgs icon{
