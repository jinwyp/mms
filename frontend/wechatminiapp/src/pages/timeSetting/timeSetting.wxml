<!--pages/timeSetting/timeSetting.wxml-->
<view class="container">
<form bindsubmit="formSubmit" bindreset="formReset">
    <view class="timer">
        <view class="time">
             <picker mode="time" value="{{time}}" name="timePicker1" start="09:00" end="23:00" bindchange="bindTimeChange">
                <view class="picker">
                 {{time}}
                </view>
                <view class="timeTit">上班时间</view>
            </picker>
        </view>
       
        <view class="time">
             <picker mode="time" value="{{time2}}" name="timePicker2" start="09:00" end="23:00" bindchange="bindTimeChange2">
                <view class="picker">
                 {{time2}}
                </view>
                <view class="timeTit">下班时间</view>
            </picker>
        </view>
    </view>
    
    <view class="chooseDay">
        <checkbox-group name="week" >
            <label bindtap="checkboxChange1" data-mon='{{mon}}'  class="week {{mon === true?'duty':'rest'}}"  ><checkbox value="mon" />星期一<view  data-mon='{{mon}}'>{{mon === true?'上班':'休息'}}</view></label>  

            <label bindtap="checkboxChange2" data-tues='{{tues}}'  class="week {{tues === true?'duty':'rest'}}"  ><checkbox value="tues" />星期二<view  data-tues='{{tues}}'>{{tues === true?'上班':'休息'}}</view></label>

            <label bindtap="checkboxChange3" data-wed='{{wed}}'  class="week {{wed === true?'duty':'rest'}}"  ><checkbox value="wed" />星期三<view  data-wed='{{wed}}'>{{wed === true?'上班':'休息'}}</view></label>

             <label bindtap="checkboxChange4" data-thur='{{thur}}'  class="week {{thur === true?'duty':'rest'}}"  ><checkbox value="thur" />星期四<view  data-thur='{{thur}}'>{{thur === true?'上班':'休息'}}</view></label>

             <label bindtap="checkboxChange5" data-fri='{{fri}}'  class="week {{fri === true?'duty':'rest'}}"  ><checkbox value="fri" />星期五<view  data-fri='{{fri}}'>{{fri === true?'上班':'休息'}}</view></label>

             <label bindtap="checkboxChange6" data-sat='{{sat}}'  class="week {{sat === true?'duty':'rest'}}"  ><checkbox value="sat" />星期六<view  data-sat='{{sat}}'>{{sat === true?'上班':'休息'}}</view></label>

             <label bindtap="checkboxChange7" data-sun='{{sun}}'  class="week {{sun === true?'duty':'rest'}}"  ><checkbox value="sun" />星期日<view  data-sun='{{sun}}'>{{sun === true?'上班':'休息'}}</view></label>
           
        </checkbox-group>
    </view>
    <navigator url="../personInfo/personInfo">
      <view class="btn-area">
            <button formType="submit" class="btn">确定</button>
        </view>
    </navigator>
</form>
</view>
