/* pages/timeSetting/timeSetting.wxss */
.timer{
    width: 100%;
    height: 244rpx;
    background-color: #ffffff;
    border-bottom: 1px solid #dedede;
    padding-top: 30rpx;
}
.time{
    width: 50%;
    display: inline-block;
    text-align: center;
}
.picker{
    width: 156rpx;
    height: 156rpx;
    border-radius: 50%;
    border: 1px solid #01696c;
    text-align: center;
    font-size: 40rpx;
    line-height: 156rpx;
    display: inline-block;
}
.timeTit{
    line-height: 70rpx;
    font-size: 32rpx;
}
.chooseDay{
    width: 100%;
    height: 740rpx;
    background-color: #ffffff;
    border-bottom: 1px solid #dedede;
    border-top: 1px solid #dedede;
    margin-top: 50rpx;
    padding: 48rpx 0;
    box-sizing: border-box;
}
.week{
    width: 182rpx;
    height: 182rpx;
    border-radius: 5rpx;
    border: 1px solid #dedede;
    display: inline-block;
    text-align: center;
    margin-left: 48rpx;
    margin-bottom: 48rpx;
    padding-top: 40rpx;
    box-sizing: border-box;
    line-height: 50rpx;
    
}
.week checkbox{
   display: none;
}
.duty{
    background-color: #fcf8d2;
    color: #01696c;
}
.rest{
    background-color: #dedede;
    color: #666666;
}
.status{
    position: relative;
}

navigator,.btn-area{  
    width: 100%;    
}
.btn{
    margin: 60rpx 40rpx 100rpx 40rpx;
    height: 82rpx;
    line-height: 82rpx;
    background-color: #01696c;
    color: #ffffff;
    font-size: 28rpx;
}