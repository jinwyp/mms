/* pages/collection/collection.wxss */
.items{
    height: 120rpx;
    width: 100%;
    background-color: #ffffff;
    border-bottom: 1px solid #dedede;
}
.interestList{
    padding: 14rpx 20rpx;
    margin: 0 0 0 25rpx;
    background-color: #01696c;
    border-radius: 40rpx;
    line-height:120rpx;
    color: #ffffff;
}
.collection{   
    width: 100%;
    padding: 40rpx;
}
.collectCon{
    width: 100%;
    height: 858rpx;
}
.collectItemList_n,.collectItemList{
    width: 640rpx;
    height: 840rpx;
    margin: 0 50rpx;
    background-color: #ffffff;
    border: 1px solid #dedede;
    border-radius: 5px; 
    display: inline-block;
}
.collectItemList_n{
    text-align: center;
}
.collectItemList .avatar{
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    vertical-align: middle;
    border-radius: 50%;
}
.collectItemList .collectP{
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 40rpx 30rpx 0 0;
    vertical-align: middle;
    font-size: 26rpx;
    color: #01696c;
    float: right;
}
.plus{
    width: 28rpx;
    height: 28rpx; 
    vertical-align: text-top;
    margin-right: 5rpx;
}
.collectItemList .shareImg .shareImgList{
    width: 580rpx;
    height: 454rpx;
    margin: 20rpx 30rpx;
    background-color: yellow;
}
.collectItemList .shareTxt{
    margin:0 30rpx; 
    color: #666666;
    text-align:justify;
    line-height: 40rpx;
}
.collectCon .collectImg_n{
    width: 250rpx;
    height: 250rpx;
    margin-top: 200rpx;
}
.collectCon .collectTxt_n{
    color: #bfbfbf;
}
.btn{
  margin: 80rpx 40rpx 40rpx 40rpx;
  height: 82rpx;
  line-height: 82rpx;
  background-color: #01696c;
  color: #ffffff;
  font-size: 28rpx;
}
