/* pages/personInfo/personInfo.wxss */
form{
    width: 100%;    
}
.row{
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
    position: relative;
    background-color: #ffffff;
}
.borderB{ 
    border-bottom: 1px solid #e4e4e4;
}
.borderT{
    border-top: 1px solid #e4e4e4;
}
.marginB{
    margin-bottom: 24rpx;
}
.borderB input{
    display: inline-block;
    height: 48px;
    vertical-align: middle;
}
.address{
    float: right;
    font-size: 14px;
    margin-top: 30rpx;
    width: 400rpx;
    text-align: right;
}
.workTime{
   float: right;
}
.H200{
    height: 200rpx;
}
.mar80{
    margin-top: 80rpx;
}
.picker{ 
    font-size: 16px;
}
.time{
    display: inline-block;
}
.week{
    display: inline-block;
    width: 70%;
    padding: 40rpx 0;
}
.week checkbox-group{
    line-height: 62rpx;
}
.H50{
    height: 100rpx;
    background: #ffffff;
}
.H150{
     height: 150rpx;
     padding-top: 10px;
}
.H100{
    height: 100rpx;
}
.form-title{
    font-size: 32rpx;
    color: #666666;
    display: inline-block;
    vertical-align: middle; 
    margin-right:  60rpx;  
}
.lineH120{
    line-height: 120rpx;
}
.lineH48{
    line-height: 48px;
}
.personImg,.chooseimage{
    width: 100rpx;
    height: 100rpx;
    float: right;
    border: 1px solid #e4e4e4;
    border-radius: 50%;
}
.WXcode{
    width: 100rpx;
    height: 100rpx;
    float: right;
    border: 1px solid #e4e4e4;
}
.trigger-r{
    width: 20px;
    height: 20px;
    float: right;
    margin-top: 28rpx;
}
.btn-area{
    
    width: 100%;    
}
.btn-area button{  
    margin: 80rpx 40rpx 40rpx 40rpx;
    height: 82rpx;
    line-height: 82rpx;
    background-color: #01696c;
    color: #ffffff;
    font-size: 28rpx;

}
.marginB100{
    margin-bottom: 30rpx;
}
