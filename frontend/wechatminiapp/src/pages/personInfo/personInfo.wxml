<!--pages/personInfo/personInfo.wxml-->
<view class="container">
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="borderB row H150 marginB">
            <view class="form-title lineH120">头像</view>
            <image src="{{head}}" mode="aspecFill" class="personImg"></image>
        </view>
        <view class="borderB row borderT H100">
            <view class="form-title">姓名：</view>
            <input name="name" />
        </view>
        <view class="borderB row H100">
            <view class="form-title">联系电话：</view>
            <input name="tel" type="number" value="{{tel}}" bindblur="checkTel"/>
        </view>
        <view class="borderB row H100">
            <view class="form-title">商号名称：</view>
            <input name="shopName"/>
        </view>
        <view class="borderB row H100" bindtap="getLocation">
            <view class="form-title lineH48">工作地址：</view>

            <image src="../../images/trigger-r.png" class="trigger-r"></image>
            <span class="address">{{address}}</span>
        </view>
        <view class="borderB row H100">
            <view class="form-title">个人微信号：</view>
            <input name="wx"/>
        </view>
        <view class="borderB row H150 marginB">
            <view class="form-title lineH120">个人微信二维码：</view>
            <image src="{{WXcode}}" bindtap="chooseimage" mode="aspecFill" class="WXcode"></image>
        </view>
        <view class="borderT row">
            <span class=" day" >工作日：</span>
            <view class="week">
                <checkbox-group bindchange="checkboxChange">
                    <label class="checkbox">
                        <checkbox value="1"/>星期一
                    </label>
                    <label class="checkbox">
                        <checkbox value="2"/>星期二
                    </label>
                    <label class="checkbox">
                        <checkbox value="3"/>星期三
                    </label>
                    <label class="checkbox">
                        <checkbox value="4"/>星期四
                    </label>
                    <label class="checkbox">
                        <checkbox value="5"/>星期五
                    </label>
                    <label class="checkbox">
                        <checkbox value="6"/>星期六
                    </label>
                    <label class="checkbox">
                        <checkbox value="7"/>星期日
                    </label>
                
                </checkbox-group>
            </view>
        </view>
        <view class="row borderT borderB H200">
            <view class="form-title mar80">工作时间：</view>
            <view class="workTime">
                <picker mode="time" class="picker lineH48" value="{{time}}" name="timePicker1" start="09:00" end="23:00" bindchange="bindTimeChange">
                <image src="../../images/trigger-r.png" class="trigger-r"></image>
                    <view class="time">
                    上班时间: {{time}}
                    </view>
                </picker> 
                <picker mode="time" class="picker lineH48 borderT" value="{{time2}}" name="timePicker2" start="09:00" end="23:00" bindchange="bindTimeChange2">
                <image src="../../images/trigger-r.png" class="trigger-r"></image>
                    <view class="time">
                    下班时间: {{time2}}
                    </view>
                </picker>     
            </view>
        </view>
       
        

    

         <view class="btn-area">
            <button formType="submit">保存</button>
        </view>
    </form>
</view>
