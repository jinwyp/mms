<!--pages/personInfo/personInfo.wxml-->
<view class="container">

 <form bindsubmit="formSubmit" bindreset="formReset">
 <!--类别-->
        
        <scroll-view class="items marginB " scroll-x="true">
            <radio-group class="radio-group" bindchange="radioChange">
                <block wx:for="{{interest}}" wx:key="{{interest}}">
                <label data-lv="{{item.name}}" class="radio interestList {{item.name === ifChoose?'chooseY':'chooseN'}}" >
                    <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.name}}
                </label>
                </block>
            </radio-group>

        </scroll-view>
        <view class="borderB borderT marginB upLoadImg">
             <image src="{{tempFilePaths}}" bindtap="chooseimage" mode="aspecFill" class="shareImg"></image>
             
        </view>

         <view class="borderB borderT">
            <textarea name="feeling" placeholder="个人体验感受" placeholder-style="color:#999999;"  />
        </view>
        <view class="borderB H100 " bindtap="getLocation">
            <view class="form-title lineH48">体验区域：</view>
            <!--<input name="address"/>-->
            <image src="../../images/trigger-r.png" class="trigger-r"></image>
            <text class="map">未选择</text>
        </view>
        <view class="borderB H100">
            <view class="form-title">体验门店(店铺)：</view>
            <input name="name"/>
        </view>
        <view class="borderB H100">
            <view class="form-title lineH48">体验时间：</view> 
            <image src="../../images/trigger-r.png" class="trigger-r"></image>
            <picker name="day" class="picker lineH48" mode="date" value="{{dateValue}}" start="1999-01-01" end="2999-12-12" bindchange="datePickerBindchange">
	            {{dateValue}}
            </picker>
        </view>
        <view class="borderB H100">
            <view class="form-title">体验价格：</view>
            <input name="price"/>
        </view>
        <view class="borderB H100">
            <view class="form-title lineH48">谁可以看：</view> 
            <image src="../../images/trigger-r.png" class="trigger-r"></image>
            <picker name="whoCanSee" class="picker lineH48" value="{{index}}" range="{{whoCanSee}}"  bindchange="bindPickerChange">
	            {{whoCanSee[index]}}
            </picker>
        </view>
        

         <view class="btn-area">
            <button formType="submit">保存</button>
        </view>
    </form>
</view>
