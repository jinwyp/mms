/* pages/personInfo/personInfo.wxss */
.items{
    height: 120rpx;
    width: 100%;
    background-color: #ffffff;
    border-bottom: 1px solid #dedede;
    overflow: hidden;
    box-sizing: border-box;
}
.interestList{
    padding: 14rpx 30rpx;
    margin: 0 0 0 25rpx;
    background-color: #01696c;
    border-radius: 40rpx;
    line-height:120rpx;
    color: #ffffff;
}
.chooseN{
    background-color: #01696c;
}
.chooseY{
    background-color: #f9b552;
}
radio{
    display: none;
}
textarea{
    padding:20rpx 0;
    line-height:80rpx;
    width: 100%;
    box-sizing: border-box;
    height:150rpx; 
}
.borderB{
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #e4e4e4;
    position: relative;
    background-color: #ffffff;
}
.borderT{
    border-top: 1px solid #e4e4e4;
}
.marginB{
    margin-bottom: 24rpx;
}
.borderB input{
    display: inline-block;
    height: 48px;
    vertical-align: middle;
}
.picker{
    float: right;
    font-size: 16px;
}
.map{
    float: right;
    font-size: 16px;
    margin-top: 30rpx;
}
.H150{
     height: 150rpx;
     padding-top: 10px;
}
.H100{
    height: 100rpx;
}
.form-title{
    font-size: 32rpx;
    color: #666666;
    display: inline-block;
    vertical-align: middle; 
    margin-right:  60rpx;  
}
.lineH120{
    line-height: 120rpx;
}
.lineH48{
    line-height: 48px;
}
.upLoadImg{
    padding: 30rpx 30rpx;
}
.upLoadImg .shareImg{
    width: 152rpx;
    height: 152rpx;
    border: 1px solid #e4e4e4;
    margin-right: 30rpx;
}

.trigger-r{
    width: 20px;
    height: 20px;
    float: right;
    margin-top: 28rpx;
}
.btn-area{
    
    width: 100%;    
}
.btn-area button{  
    margin: 80rpx 40rpx 40rpx 40rpx;
    height: 82rpx;
    line-height: 82rpx;
    background-color: #01696c;
    color: #ffffff;
    font-size: 28rpx;

}
.marginB100{
    margin-bottom: 30rpx;
}
